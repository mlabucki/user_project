    <footer class="bg-dark text-white py-3 mt-5">
      <div class="container">
        <p>&copy;</p>
        <p>Test App</p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
